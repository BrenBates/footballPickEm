<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>


      {{token}}
        {{#each token}}
          {{token}}
        {{/each}}

        <button id="signUp" class="btn btn-primary float-right logged-out" style="display:block" data-toggle="modal" data-target="#modalSignUp">Sign Up</button>
        <button id="logIn" class="btn btn-primary float-right logged-out" style="display:block" data-toggle="modal" data-target="#modalLogIn">Log In</button>
        <button id="viewTeams" class="btn btn-primary float-right logged-in" style="display:none">View Teams</button>
        <button id="viewGames" class="btn btn-primary float-right logged-in" style="display:none">View Current Games</button>

        {{!-- <a href="/viewteams"></a>
        <a href="/viewgames"></a> --}}
       
        
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Example Text</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ｘ</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>


<!--Various Modals for User Authentication-->
  ​
<!-- Modal for Signing Up -->

  <div class="modal fade" id="modalSignUp">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- header -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"></button>
        </div>
        <!-- body -->
        <div class="modal-header">
          <form role="form" id="signUpForm">
            <div class="form-group">
              <input id="signUpFirstName" type="text" class="form-control" placeholder="First Name" />
              <input id="signUpLastName" type="text" class="form-control" placeholder="Last Name" />
              <input id="signUpEmail" type="email" class="form-control" placeholder="Email" />
              <input id="signUpPassword" type="password" class="form-control" placeholder="Password" />
            </div>
          </form>
        </div>
        <!-- footer -->
        <div class="modal-footer">
          <button type='submit' id='submitSignUp' class="btn btn-dark btn-block">Sign Up</button>
        </div>
        ​
      </div>
    </div>
  </div>


<!-- Modal for Logging In -->

<div class="modal fade" id="modalLogIn">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- header -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"></button>
          ​
        </div>
        <!-- body -->
        <div class="modal-header">
          <form role="form" id="logInForm">
            <div class="form-group">
              <!-- <input id="login-displayname" type="text" class="form-control" placeholder="Display Name" /> -->
              <input id="logInEmail" type="email" class="form-control" placeholder="Email" />
              <input id="logInPassword" type="password" class="form-control" placeholder="Password" />
            </div>
          </form>
        </div>
        <!-- footer -->
        <div class="modal-footer">
          <button type='submit' id='logInSubmit' class="btn btn-dark btn-block">Log In</button>
        </div>
        ​
      </div>
    </div>
  </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
